<div class="panel panel-default">
    <div class="panel-heading"><a href="{{ path( location ) }}">{{ ez_content_name( content )}}</a></div>
    <div class="panel-body">
        {% if not ez_is_field_empty( content, 'subtitle' ) %}
            <div class="panel-subheading">{{ ez_field_value( content, 'subtitle' ) }}</div>
        {% endif %}
        {% if agendaScheduleList|length > 0 %}
            <ul>
                {% for agendaSchedule in agendaScheduleList %}
                    <li>
                        {{ render( controller( "ez_content:viewLocation", {
                                "locationId": agendaSchedule.id,
                                "viewType": "line"
                            } ) )
                        }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>